<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:padding="5dp"
                android:text="Update Profile"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/txtEditEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_txt_box"
                android:drawableLeft="@drawable/ic_email"
                android:hint="Email"
                android:padding="5dp" />

            <EditText
                android:id="@+id/txtEditName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_txt_box"
                android:drawableLeft="@drawable/ic_name"
                android:hint="Name"
                android:padding="5dp" />

            <EditText
                android:id="@+id/txtEditSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_txt_box"
                android:drawableLeft="@drawable/ic_school"
                android:hint="School"
                android:padding="5dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="90dp"
                android:text="Save!"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:padding="5dp"
                android:text="Change Password"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/txtEditCurrPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_txt_box"
                android:drawableLeft="@drawable/ic_lock"
                android:hint="Current Password"
                android:padding="5dp" />

            <EditText
                android:id="@+id/txtEditNewPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_txt_box"
                android:drawableLeft="@drawable/ic_lock"
                android:hint="New Password"
                android:padding="5dp" />

            <Button
                android:id="@+id/btnChngPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="90dp"
                android:text="Change!"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="90dp"
                android:background="@color/colorPrimary"
                android:text="Log Out"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="90dp"
                android:background="#D00"
                android:text="Delete Account"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>